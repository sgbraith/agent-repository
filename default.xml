<?xml version="1.0" encoding="UTF-8"?>
<manifest>
	<remote name="yocto" fetch="https://git.yoctoproject.org/git/" />
	<remote name="openembedded" fetch="git://git.openembedded.org/" />
	<remote name="wm" fetch="git://github.com/sgbraith/" />

	<remote name="bitbucket-upstream" fetch="ssh://git@cosgit1.ds.jdsu.net:7999/up/"/>
	<remote name="bitbucket-qt" fetch="ssh://git@cosgit1.ds.jdsu.net:7999/qt/"/>
	<remote name="bitbucket-fuse" fetch="ssh://git@cosgit1.ds.jdsu.net:7999/fuse/"/>

	<default revision="refs/heads/master" sync-j="4"/>

	<!-- Core layers: poky and meta-oe -->
	<project name="poky" remote="yocto" revision="dunfell" />
	<project name="meta-openembedded" remote="openembedded" revision="dunfell"/>

	<!-- Additional layers -->
	<project path="bitbucket-qt" name="ssh://git@cosgit1.ds.jdsu.net:7999/qt/meta-viavi.git" groups="linux,image"/>

	<!-- BSP layers -->
	<project name="meta-raspberrypi" remote="yocto" revision="dunfell" />

	<!-- if we need to use a script to pull changes to the build env
	<project remote="wm" revision="master" name="agent-build" path="build" groups="linux,image">
		<linkfile src="scripts/load-build-env" dest="load-build-env" />
	</project>
	-->
	
	<!-- application layers -->
	<project remote="bitbucket-fuse" name="maf-portal" path="sources/maf-portal" groups="linux,windows"/>
	<project remote="bitbucket-fuse" name="ma-cpp-executor" path="sources/ma-cpp-executor" groups="linux"/>
	<project remote="bitbucket-fuse" name="ma-python-executor" path="sources/ma-python-executor" groups="linux,windows"/>

	<project remote="bitbucket-qt" name="cloudsite-ma" path="source/cloudsite-ma" groups="linux,windows"/>

</manifest>

